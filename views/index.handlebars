<div class="container">

    <img src="assets/img/burger.ico">
    <h1>Eat-Da-Burger!</h1>

    <div class="row">

        <div class="col-sm-6">


            <h2>Burgers Ready to Eat!</h2>

            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <li>
                            {{this.name}}

                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="true">
                                <button type="submit">DEVOUR BURGER!</button>
                            </form>

                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-6">
            <h2>These Burgers have been eaten!</h2>

            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <li>
                            {{this.name}}

                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="false">
                            </form>

                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <h2>Add a Burger</h2>
    <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
            <label for="burgerInput">Burger Name:</label>
            <input type="text" id="burgerInput" name="name">
        </div>


        <button type="submit">Submit</button>
    </form>
</div>
